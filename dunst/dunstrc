# Dunst Configuration - Catppuccin Mocha
# Sourced from https://github.com/catppuccin/dunst

[global]
    # 位置与大小
    origin = top-right
    offset = 30x50
    width = 300
    height = 80
    
    # 外观
    font = JetBrainsMono Nerd Font 10
    format = "<b>%s</b>\n%b"
    frame_width = 2
    separator_height = 1
    padding = 12
    horizontal_padding = 12
    
    # 行为
    follow = mouse
    mouse_left_click = close_current
    mouse_middle_click = do_action
    mouse_right_click = close_all

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

# --- 主题颜色配置 ---

[urgency_low]
    # Subtext0
    background = "#a6adc8" 
    # Base
    foreground = "#1e1e2e"
    # Blue
    frame_color = "#89b4fa"
    timeout = 5

[urgency_normal]
    # Base
    background = "#1e1e2e"
    # Text
    foreground = "#cdd6f4"
    # Blue
    frame_color = "#89b4fa"
    timeout = 10

[urgency_critical]
    # Base
    background = "#1e1e2e"
    # Red
    foreground = "#f38ba8"
    # Red
    frame_color = "#f38ba8"
    timeout = 0
